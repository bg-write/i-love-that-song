<%- include('../partials/header') %>

<h3><%= title %></h3>
<form action="/albums/search" method="POST">
	<div class="form-row">
		<div class="col-md-4">
			<input
				type="text"
				class="form-control"
				name="query"
				placeholder="Search for album..."
			/>
		</div>
	</div>
	<button type="submit" class="btn btn-success">Search</button>
</form>
<!-- How the called API output looks on screen -->
<% if (results) { %> <% results.forEach(album => { %>
<div class="card" style="width: 18rem">
	<img src="<%= album.cover_image %>" class="card-img-top" alt="..." />
	<div class="card-body">
		<h5 class="card-title"><%= album.title %></h5>
		<h6 class="card-text"><%= album.year %></h6>
		<!-- This is just for testing and comparing -->
		<h6 class="card-text">resource_url: <%= album.resource_url %></h6>
		<!-- the button to the API I want to show more of -->
		<a href="/albums/<%= album.id %> " class="btn btn-primary">More Info</a>
	</div>
</div>
<% }) %> <% } %> <%- include('../partials/footer') %>
