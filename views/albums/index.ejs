<%- include('../partials/header') %>
<!-- ICEBOX For every album already in My Collection and how I wish to style it ... I want to add photos in here -->

<u><h3 id="indexTitle"><%= title %></h3></u>

<% albums.forEach(album => { %>
<div id="albumCollection" style="width: 37rem">
	<div>
		<div>
			<h4 class="card-title">
			<%= album.title ? album.title : '' %> (<%= album.year ? album.year : ''
				%>) - 
			<!-- If album is a 'Masters', return MASTERS button -->
			<% if (album.resource_url.includes('masters')) { %>
				<a href="/albums/<%= album.id %>" class="btn-sm btn-warning">MORE INFO</a>
				<% } %>
				<!-- If album is a 'Releases', return RELEASES button -->
				<% if (album.resource_url.includes('releases')) { %>
				<a href="/albums/<%= album.id %>" class="btn-sm btn-warning">MORE INFO</a>
				<% } %>
				<!-- If album is a 'Artists', return MASTERS button -->
				<% if (album.resource_url.includes('artists')) { %>
				<a href="/albums/<%= album.id %>" class="btn-sm btn-warning">MORE INFO</a>
				<% } %>
				<!-- If album is a 'Labels', return MASTERS button -->
				<% if (album.resource_url.includes('labels')) { %>
				<a href="/albums/<%= album.id %>" class="btn-sm btn-warning">MORE INFO</a>
				<% } %>
			</h4>
		</div>
	</div>
</div>
<% }) %> <%- include('../partials/footer') %>
